% Frame number
\setbeamertemplate{footline}{%
    \ifinlogoframe\else%
    \ifintitleframe\else%
    \ifinsectionframe\else%
        \hfill%
        \begin{beamercolorbox}[wd=.95\paperwidth,ht=1cm]{page number in head/foot}
            \usebeamerfont{page number in head/foot}%
            \usebeamercolor[fg]{page number in head/foot}%
            \insertshorttitle%
            ~|~%
            \insertshortauthor%
            , %
            \insertshortdate%
            \hfill
            \ifbeamer@noframenumber\else%
                \insertpagenumber\kern1em\vspace*{4mm}%
            \fi
        \end{beamercolorbox}
  \fi\fi\fi%
}
